{
  "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": {
          "level": "warn",
          "options": {
            "ignoreAtRules": [
              "theme",
              "utility",
              "variant",
              "custom-variant",
              "plugin",
              "config",
              "tailwind",
              "apply",
              "layer",
              "screen"
            ]
          }
        }
      }
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  }
}
